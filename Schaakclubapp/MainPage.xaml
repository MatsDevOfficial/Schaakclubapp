<Window x:Class="Schaakclubapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Schaakclub App" Height="400" Width="600">
    <Grid Background="Black">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Foreground="White" Margin="10">Inloggen bij de Schaakclub</TextBlock>

        <TextBox Name="UsernameTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0,50,0,0" FontSize="14" Background="White" Foreground="Black" />
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0,100,0,0" FontSize="14" Background="White" Foreground="Black" />

        <Button Content="Inloggen" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0,150,0,0" FontSize="16" Click="LoginButton_Click" Background="Gray" Foreground="White"/>

        <Button Content="RSVP" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0,200,0,0" FontSize="16" Click="RSVPButton_Click" Background="Gray" Foreground="White"/>
    </Grid>
</Window>
