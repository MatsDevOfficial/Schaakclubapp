<Window x:Class="Schaakclubapp.RSVPForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RSVP Formulier" Height="300" Width="400">
    <Grid Background="White">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" Margin="10">RSVP voor Evenement</TextBlock>

        <TextBox Name="NameTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0,50,0,0" FontSize="14" Background="White" Foreground="Black" PlaceholderText="Vul je naam in" />

        <Button Content="Verstuur RSVP" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0,100,0,0" FontSize="16" Click="SubmitRSVP_Click" Background="Gray" Foreground="White"/>
    </Grid>
</Window>
