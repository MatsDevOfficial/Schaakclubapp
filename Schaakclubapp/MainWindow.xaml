<Window x:Class="ChessClubApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inloggen - Schaakclub" Height="200" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Gebruikersnaam:" Grid.Row="0" Margin="0,0,0,5" />
        <TextBox x:Name="UsernameTextBox" Grid.Row="1" />

        <TextBlock Text="Wachtwoord:" Grid.Row="2" Margin="0,10,0,5" />
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" />

        <Button Content="Inloggen" Grid.Row="4" Margin="0,20,0,0" Click="LoginButton_Click" />
    </Grid>
</Window>
