<Window x:Class="Schaakclubapp.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="UsernameTextBox" Width="200" Margin="10" PlaceholderText="Gebruikersnaam"/>
            <PasswordBox Name="PasswordBox" Width="200" Margin="10" PlaceholderText="Wachtwoord"/>
            <Button Content="Inloggen" Click="LoginButton_Click" Width="200" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
